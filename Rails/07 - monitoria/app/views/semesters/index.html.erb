<p id="notice"><%= notice %></p>

<div class="alert alert-dismissible alert-danger">
  <h4 class="alert-heading" align="center">Semestres</h4>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Ano</th>
      <th>Periodo</th>
      <th>Inicio</th>
      <th>Fim</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @semesters.each do |semester| %>
      <tr>
        <td><%= semester.ano %></td>
        <td><%= semester.periodo %></td>
        <td><%= semester.inicio %></td>
        <td><%= semester.fim %></td>
        <td><%= link_to 'Show', semester %></td>
        <td><%= link_to 'Edit', edit_semester_path(semester) %></td>
        <td><%= link_to 'Destroy', semester, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>
<center>
  <%= button_to 'Novo Semestre', new_semester_path, options={:method => :get, class: 'btn btn-danger'} %>
</center>
